// manifest.json
{
  "manifest_version": 3,
  "name": "Word Counter",
  "version": "1.0",
  "description": "Counts the selected words on a webpage.",
  "permissions": ["contextMenus", "activeTab","scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
